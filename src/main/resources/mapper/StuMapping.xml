<select id="querycount" parameterType="cn.p.entity.vo.Dataparams" resultType="long">
   select count(*) from ssm_stu where isdel=1
</select>

   <select id="querystu" parameterType="cn.p.entity.vo.Dataparams" resultType="cn.p.entity.po.Student">
      select * from ssm_stu where isdel=1 limit #{start},#{length}
   </select>

   <update id="updateisdel" >
      update ssm_stu set isdel=0 where id=#{id}
   </update>

   <select id="queryid" resultType="cn.p.entity.po.Student">
      select * from ssm_stu where id=#{id}
   </select>


